@model ContentManager.Models.User

@{
    ViewBag.Title = "Create";
}

<h1 style="font-family:'Indie Flower',sans-serif">Log In</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b>
                <i>
                    @Html.LabelFor(model => model.email, "Enter Email:", htmlAttributes: new { @class = "control-label col-md-2" })
                </i>
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <b>
                <i>
                    @Html.LabelFor(model => model.password, "Enter Password:", htmlAttributes: new { @class = "control-label col-md-2" })
                </i>
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        @*Reference Properly
    https://stackoverflow.com/questions/11651254/how-to-change-the-display-name-for-labelfor-in-razor-in-mvc3*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <b>
        <i>
            @Html.ActionLink("Don't have an Account?", "Register")
        </i>
    </b>
</div>
